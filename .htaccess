# This file should be in your PROJECT ROOT (where server.js is)
RewriteEngine On

# 1. If the request is for /checkout, manually point it to the public file
# This bypasses the Node.js selector for this specific route if it's failing
RewriteRule ^checkout$ public/checkout.html [L]

# 2. Pass everything else to the Node.js application
# The following lines are usually added by cPanel's Node.js selector
# but we ensure they don't block our custom rule above.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L]


